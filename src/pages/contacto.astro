---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Lic. Alvaro Calderon Sagastume">
  <section class="py-20">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl font-serif font-bold text-center mb-12">Contacto</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-bold mb-6">Información de Contacto</h2>
          <div class="space-y-4">
            <div>
              <h3 class="font-bold">Dirección</h3>
              <p class="text-gray-600">Tiquisate, Escuintla, Guatemala</p>
            </div>
            <div>
              <h3 class="font-bold">Teléfono</h3>
              <p class="text-gray-600">+502 78844919</p>
            </div>
            <div>
              <h3 class="font-bold">Email</h3>
              <p class="text-gray-600">licenciadoalvarocalderon@gmail.com</p>
            </div>
            <div>
              <h3 class="font-bold">Horario de Atención</h3>
              <p class="text-gray-600">Lunes a Sabado: 8:00 AM - 1:00 PM Y 1:00 AM - 6:00 PM
              </p>
            </div>
          </div>

          <div class="mt-8">
            <h2 class="text-2xl font-bold mb-4">Ubicación</h2>
            <div id="map" class="w-full h-[400px] rounded-lg shadow-md"></div>
          </div>
        </div>

        <div>
          <h2 class="text-2xl font-bold mb-6">Envíenos un Mensaje</h2>
          
          <!-- JotForm Embed -->
          <iframe
            id="JotForm"
            title="Formulario de Contacto"
            src="https://form.jotform.com/250699176119063"
            width="100%"
            height="600"
            style="border: none; border-radius: 8px;"
            allowfullscreen
          ></iframe>
          <!-- Fin JotForm Embed -->
        </div>
      </div>
    </div>
  </section>
</Layout>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
  // Inicializar el mapa con Leaflet
  document.addEventListener("DOMContentLoaded", function () {
    var map = L.map('map').setView([14.2889414, -91.3674132], 15); // Coordenadas de Tiquisate, Escuintla

    // Capa base de OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // Agregar marcador
    L.marker([14.2889414, -91.3674132]).addTo(map)
      .bindPopup('Lic. Alvaro Calderon Sagastume - Oficina Jurídica')
      .openPopup();
  });
</script>

<style>
  #map {
    width: 100%;
    height: 400px;
    border-radius: 0.5rem;
  }
</style>
